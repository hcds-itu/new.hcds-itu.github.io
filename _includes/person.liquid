<div class="col-sm-3" style="text-align: center; padding-bottom: 5%">
<!-- <div class="grid-item"> -->
  {% if person.redirect %}
  <a href="{{ person.redirect }}">
  {% else %}
  <a href="{{ person.url | relative_url }}">
  {% endif %}
    <!-- <div class="card hoverable"> -->
    <div class="">
      <div style="padding: 5%">
        {% if person.img %}
          {% include figure.liquid class='img-fluid rounded-circle' path=person.img alt='person thumbnail' width="80%" %}
        {% endif %}
      </div>
      <!-- <div class="card-body"> -->
      <div class="">
        <p>
          <strong>{{ person.name }}</strong><br>
          <em>{{ person.position }}</em><br>
          {{ person.email }}<br>
          {% for theme in person.themes %}
            <div class="badge badge-pill badge-info">{{ theme }}</div>
          {% endfor %}
        </p>
